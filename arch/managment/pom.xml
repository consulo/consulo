        </property>
      </activation>
      <properties>
        <build.number>${env.BUILD_NUMBER}</build.number>
        <dev.mode>false</dev.mode>
      </properties>
    </profile>
    <profile>
      <id>java-level-default-set</id>
      <activation>
        <activeByDefault>true</activeByDefault>
        <property>
          <name>!java.level</name>
        </property>
      </activation>
      <properties>
        <java.level>1.8</java.level>
      </properties>
    </profile>

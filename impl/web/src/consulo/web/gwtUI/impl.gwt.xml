<module>

  <collapse-all-properties/>

  <inherits name='com.google.gwt.user.User'/>
  <inherits name="com.sksamuel.gwt.GwtWebsockets"/>
  <inherits name="org.gwt.advanced.Grid"/>
  <inherits name="consulo.ui.api"/>

  <entry-point class='consulo.web.gwtUI.client.UIEntryPoint'/>

  <source path='shared'/>
  <source path='client'/>

  <public path="client/resource"/>

  <stylesheet src="css/advanced-gwt-custom.css"/>
  <stylesheet src="css/advanced-gwt.css"/>
  <stylesheet src="css/gwt.css"/>
  <stylesheet src="css/ui.css"/>

  <generate-with class="consulo.web.gwtUI.UIFactoryGenerator">
    <when-type-assignable class="consulo.web.gwtUI.client.ui.UIFactory"/>
  </generate-with>
</module>

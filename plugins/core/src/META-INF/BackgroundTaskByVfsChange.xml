<idea-plugin>
  <extensionPoints>
    <extensionPoint name="taskByVfsChange" beanClass="com.intellij.openapi.fileTypes.FileTypeExtensionPoint">
      <with attribute="implementationClass" implements="org.consulo.vfs.backgroundTask.BackgroundTaskByVfsChangeProvider"/>
    </extensionPoint>
  </extensionPoints>

  <extensions defaultExtensionNs="com.intellij">
    <editorNotificationProvider implementation="org.consulo.vfs.backgroundTask.ui.BackgroundTaskByVfsChangeNotificationProvider" />
    <projectService serviceInterface="org.consulo.vfs.backgroundTask.BackgroundTaskByVfsChangeManager"
                    serviceImplementation="org.consulo.vfs.backgroundTask.BackgroundTaskByVfsChangeManagerImpl"/>
  </extensions>
</idea-plugin>
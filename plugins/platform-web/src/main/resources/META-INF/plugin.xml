<idea-plugin>
  <id>consulo.platform.web</id>
  <name>Platform: web</name>

  <application-components>
    <component>
      <interface-class>com.intellij.openapi.wm.WindowManager</interface-class>
      <implementation-class>consulo.web.wm.impl.WebWindowManagerImpl</implementation-class>
    </component>
    <component>
      <interface-class>consulo.platform.api.wp.ApplicationIdeFocusManager</interface-class>
      <implementation-class>consulo.web.wm.impl.WebIdeFocusManagerImpl</implementation-class>
    </component>

    <component>
      <interface-class>consulo.fileEditor.impl.text.TextEditorProvider</interface-class>
      <implementation-class>consulo.web.fileEditor.impl.text.WebTextEditorProvider</implementation-class>
    </component>
  </application-components>

  <project-components>
    <component>
      <interface-class>com.intellij.openapi.fileEditor.FileEditorManager</interface-class>
      <implementation-class>consulo.web.fileEditor.impl.WebPsiAwareFileEditorManagerImpl</implementation-class>
    </component>
    <component>
      <interface-class>com.intellij.openapi.wm.ToolWindowManager</interface-class>
      <implementation-class>consulo.web.wm.impl.WebToolWindowManagerImpl</implementation-class>
    </component>
    <component>
      <interface-class>consulo.platform.api.wp.ProjectIdeFocusManager</interface-class>
      <implementation-class>consulo.web.wm.impl.WebIdeFocusManagerImpl</implementation-class>
    </component>
    <component>
      <interface-class>com.intellij.openapi.vcs.changes.ChangesViewI</interface-class>
      <implementation-class>com.intellij.openapi.vcs.changes.DummyChangesView</implementation-class>
      <headless-implementation-class>com.intellij.openapi.vcs.changes.DummyChangesView</headless-implementation-class>
      <skipForDefaultProject/>
    </component>
  </project-components>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceInterface="consulo.start.WelcomeFrameManager"
                        serviceImplementation="consulo.web.start.WebWelcomeFrameManager"/>

    <applicationService serviceInterface="com.intellij.ui.content.ContentFactory"
                        serviceImplementation="consulo.wm.impl.UnifiedContentFactoryImpl"/>

    <applicationService serviceInterface="com.intellij.openapi.help.HelpManager"
                        serviceImplementation="consulo.web.help.impl.WebHelpManagerImpl"/>

    <projectService serviceInterface="com.intellij.ide.projectView.ProjectView"
                    serviceImplementation="consulo.web.projectView.WebProjectViewImpl"/>

    <applicationService serviceInterface="com.intellij.ui.IconDeferrer"
                        serviceImplementation="com.intellij.ui.DummyIconDeferrer"/>

    <applicationService serviceInterface="com.intellij.openapi.vfs.newvfs.RefreshQueue"
                        serviceImplementation="consulo.vfs.newvfs.NewRefreshQueueImpl"/>

    <fileChooseDialogProvider implementation="consulo.web.fileChooser.impl.WebFileChooseDialogProvider" order="last"/>
  </extensions>
</idea-plugin>
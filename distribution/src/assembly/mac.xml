<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>mac</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>${project.basedir}/boot/mac/</directory>
      <includes>
        <include>**</include>
      </includes>
      <outputDirectory>/Consulo.app/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/platform/shared/</directory>
      <includes>
        <include>**</include>
      </includes>
      <outputDirectory>/Consulo.app/Contents/platform/build${build.number}/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/platform/mac</directory>
      <includes>
        <include>**</include>
      </includes>
      <outputDirectory>/Consulo.app/Contents/platform/build${build.number}/</outputDirectory>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/Consulo.app/Contents/platform/build${build.number}/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
      <excludes>
        <exclude>consulo:consulo-bundle</exclude>
        <exclude>consulo:consulo-core-plugin</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/Consulo.app/Contents/platform/build${build.number}/plugins/core/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
      <includes>
        <include>consulo:consulo-core-plugin</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>mac</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <componentDescriptors>
    <componentDescriptor>${project.basedir}/src/platform.base_mac.xml</componentDescriptor>
    <componentDescriptor>${project.basedir}/src/platform.desktop_mac.xml</componentDescriptor>
  </componentDescriptors>

  <fileSets>
    <fileSet>
      <directory>${project.basedir}/boot/mac/</directory>
      <includes>
        <include>**</include>
      </includes>
      <outputDirectory>${file.separator}Consulo.app${file.separator}</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/platform/desktop-awt/shared/</directory>
      <includes>
        <include>*/**</include>
      </includes>
      <outputDirectory>${file.separator}Consulo.app${file.separator}Contents${file.separator}platform${file.separator}buildSNAPSHOT${file.separator}</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/platform/desktop-awt/mac</directory>
      <includes>
        <include>*/**</include>
      </includes>
      <outputDirectory>${file.separator}Consulo.app${file.separator}Contents${file.separator}platform${file.separator}buildSNAPSHOT${file.separator}</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
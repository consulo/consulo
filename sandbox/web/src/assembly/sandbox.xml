<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id/>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>${project.basedir}/../../distribution/platform/shared/</directory>
      <includes>
        <include>*/*</include>
      </includes>
      <outputDirectory>/workdir/platform/buildSNAPSHOT/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../../distribution/platform/win</directory>
      <includes>
        <include>*/*</include>
      </includes>
      <outputDirectory>/workdir/platform/buildSNAPSHOT/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../../distribution/platform/linux</directory>
      <includes>
        <include>*/*</include>
      </includes>
      <excludes>
        <exclude>/bin/.gitignore</exclude>
      </excludes>
      <outputDirectory>/workdir/platform/buildSNAPSHOT/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../../distribution/platform/mac</directory>
      <includes>
        <include>*/*</include>
      </includes>
      <outputDirectory>/workdir/platform/buildSNAPSHOT/</outputDirectory>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/workdir/platform/buildSNAPSHOT/lib</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <excludes>
        <exclude>consulo:consulo-core-plugin</exclude>
        <exclude>consulo:consulo-sand-language-plugin</exclude>
        <exclude>consulo:consulo-web-boot</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/workdir/platform/buildSNAPSHOT/plugins/core/lib</outputDirectory>
      <includes>
        <include>consulo:consulo-core-plugin</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/workdir/platform/buildSNAPSHOT/plugins/sand-language/lib</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <includes>
        <include>consulo:consulo-sand-language-plugin</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/webapp/</outputDirectory>
      <includes>
        <include>consulo:consulo-web-boot:war</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>main</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <componentDescriptors>
    <componentDescriptor>${project.basedir}/../../distribution/src/platform.base.xml</componentDescriptor>
    <componentDescriptor>${project.basedir}/../../distribution/src/platform.desktop.xml</componentDescriptor>
  </componentDescriptors>

  <fileSets>
    <fileSet>
      <directory>${project.basedir}/../../distribution/boot/win/</directory>
      <includes>
        <include>**</include>
      </includes>
      <outputDirectory>Consulo/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../../distribution/platform/desktop-awt/shared/</directory>
      <includes>
        <include>**</include>
      </includes>
      <outputDirectory>Consulo/platform/buildSNAPSHOT/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../../distribution/platform/desktop-awt/win</directory>
      <includes>
        <include>**</include>
      </includes>
      <outputDirectory>Consulo/platform/buildSNAPSHOT/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../../distribution/platform/desktop-awt/linux</directory>
      <includes>
        <include>**</include>
      </includes>
      <excludes>
        <exclude>/bin/.gitignore</exclude>
      </excludes>
      <outputDirectory>Consulo/platform/buildSNAPSHOT/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../../distribution/platform/desktop-awt/mac</directory>
      <includes>
        <include>**</include>
      </includes>
      <outputDirectory>Consulo/platform/buildSNAPSHOT/</outputDirectory>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <outputDirectory>Consulo/platform/buildSNAPSHOT/plugins/consulo.sandbox.plugin/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <includes>
        <include>consulo:consulo-sand-language-plugin</include>
        <include>com.formdev:flatlaf</include>
        <include>org.pushing-pixels:radiance-substance</include>
        <include>org.pushing-pixels:radiance-trident</include>
        <include>org.pushing-pixels:radiance-neon</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>